{
  "plugin_system": {
    "version": "1.0.0",
    "description": "远程调试插件系统配置",
    "plugin_directory": "plugins",
    "auto_load": true,
    "max_plugins": 50,
    "security": {
      "enable_sandbox": true,
      "allowed_modules": [
        "os",
        "sys",
        "time",
        "json",
        "platform",
        "psutil",
        "socket",
        "glob",
        "re",
        "datetime",
        "collections",
        "itertools",
        "functools"
      ],
      "forbidden_modules": [
        "subprocess",
        "eval",
        "exec",
        "compile",
        "__import__"
      ]
    }
  },
  "installed_plugins": [],
  "plugin_categories": {
    "system": {
      "name": "系统工具",
      "description": "系统信息和管理工具",
      "icon": "system"
    },
    "network": {
      "name": "网络工具",
      "description": "网络监控和分析工具",
      "icon": "network"
    },
    "file": {
      "name": "文件工具",
      "description": "文件操作和管理工具",
      "icon": "file"
    },
    "analysis": {
      "name": "分析工具",
      "description": "数据分析和处理工具",
      "icon": "analysis"
    },
    "debug": {
      "name": "调试工具",
      "description": "调试和诊断工具",
      "icon": "debug"
    },
    "custom": {
      "name": "自定义工具",
      "description": "用户自定义工具",
      "icon": "custom"
    }
  },
  "command_aliases": {
    "sys": "sysinfo",
    "ps": "pslist",
    "net": "netinfo",
    "search": "find",
    "log": "loganalyze"
  },
  "plugin_templates": {
    "basic_plugin": {
      "name": "基础插件模板",
      "description": "创建基础插件的模板",
      "template_file": "templates/basic_plugin_template.py"
    },
    "command_plugin": {
      "name": "命令插件模板",
      "description": "创建命令插件的模板",
      "template_file": "templates/command_plugin_template.py"
    },
    "ui_plugin": {
      "name": "界面插件模板",
      "description": "创建界面插件的模板",
      "template_file": "templates/ui_plugin_template.py"
    }
  },
  "plugin_store": {
    "enabled": false,
    "url": "https://plugins.remote-debug.com",
    "auto_update": false,
    "check_interval": 86400
  },
  "logging": {
    "enabled": true,
    "level": "INFO",
    "file": "logs/plugin_system.log",
    "max_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "performance": {
    "command_timeout": 30,
    "plugin_load_timeout": 10,
    "max_memory_usage": "100MB",
    "enable_profiling": false
  },
  "ui_settings": {
    "show_plugin_toolbar": true,
    "show_command_history": true,
    "auto_complete_commands": true,
    "command_history_size": 100,
    "theme": "default"
  }
}